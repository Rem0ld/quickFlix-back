{
   "compilerOptions": {
      "lib": [
         "ES2021.String"
      ],
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
   },
   "include": [
      "src/**/*.ts",
      "index.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}